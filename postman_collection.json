							"mode": "raw",
							"raw": "{\n  \"payload\": {\n    \"healthcheck\": true,\n    \"circuitbreak\": true,\n    \"bulkhead\": true,\n    \"ratelimit\": true\n  },\n  \"metadata\": {\n    \"technology\": \"python\",\n    \"owner\": \"observability-team\"\n  }\n}",
